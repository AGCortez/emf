<plugin
   id="org.eclipse.emf.test.core"
   name="%pluginName"
   version="2.1.0"
   provider-name="%providerName"
   class="org.eclipse.emf.test.core.EMFTestCorePlugin">

   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.emf.ecore"/>
      <import plugin="org.eclipse.emf.ecore.change"/>
      <import plugin="org.eclipse.emf.ecore.xmi"/>
      <import plugin="org.eclipse.xsd"/>
      <import plugin="org.junit"/>
   </requires>

   <runtime>
      <library name="test.core.jar">
         <export name="*"/>
      </library>
   </runtime>
   
  <extension point="org.eclipse.emf.ecore.generated_package">
    <package 
       uri = "http://org/eclipse/emf/test/models/Customer" 
       class = "org.eclipse.emf.test.models.customer.CustomerPackage" />
  </extension>

  <extension point="org.eclipse.emf.ecore.extension_parser">
    <parser 
       type="customer" 
       class="org.eclipse.emf.test.models.customer.util.CustomerResourceFactoryImpl" />
  </extension>

  <extension point="org.eclipse.emf.ecore.generated_package">
    <package 
       uri = "http://org/eclipse/emf/test/models/MovieDB" 
       class = "org.eclipse.emf.test.models.movie.db.DbPackage" />
  </extension>

  <extension point="org.eclipse.emf.ecore.extension_parser">
    <parser 
       type="db" 
       class="org.eclipse.emf.test.models.movie.db.util.DbResourceFactoryImpl" />
  </extension>

  <extension point="org.eclipse.emf.ecore.generated_package">
    <package 
       uri = "http://org/eclipse/emf/test/models/Order" 
       class = "org.eclipse.emf.test.models.order.OrderPackage" />
  </extension>

  <extension point="org.eclipse.emf.ecore.extension_parser">
    <parser 
       type="order" 
       class="org.eclipse.emf.test.models.order.util.OrderResourceFactoryImpl" />
  </extension>   
</plugin>
