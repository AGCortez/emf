<feature
      id="org.eclipse.emf.tests"
      label="Tests for Eclipse Modeling Framework"
      version="2.1.0"
      image= "eclipse_update_120.jpg"
      provider-name="Eclipse.org">

   <license url="%licenseURL">

   </license>

   <url>
<!--      <update label="%updateSiteName" url="http://update.eclipse.org/updates/3.0"/> -->
      <update label="%secondaryUpdateSiteName" url="http://download.eclipse.org/tools/emf/updates/"/>
      <discovery label="%secondaryUpdateSiteName" url="http://download.eclipse.org/tools/emf/updates/"/>
   </url>

   <requires>
      <import feature="org.eclipse.emf" version="2.0.0"/>
   </requires>

   <!-- Required Eclipse plugins -->
   
   <!-- the plugin is actually numbered _0.0.0, but for some hackish reason, the folder, when created at test-time, gets named _2.1.0 -->
   <!-- so to fix the "org.eclipse.test_0.0.0 not found." error, I've changed the version="" value to 2.1.0 instead of 0.0.0 -->
   <plugin
         id="org.eclipse.test"
         download-size="0"
         install-size="0"
         version="2.1.0"/>

   <plugin
         id="org.eclipse.ant.optional.junit"
         download-size="0"
         install-size="0"
         version="0.0.0"
         fragment="true"/>

   <!-- End of required Eclipse plugins -->

   <plugin
         id="org.eclipse.emf.tests"
         download-size="0"
         install-size="0"
         version="2.1.0">
   </plugin>

   <plugin
         id="org.eclipse.emf.test.core"
         download-size="0"
         install-size="0"
         version="2.1.0">
   </plugin>
    
</feature>
