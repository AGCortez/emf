<plugin
    name = "%pluginName"
    id = "library.xsd"
    version = "1.0.0"
    provider-name = "%providerName">

  <requires>
    <import plugin="org.eclipse.core.runtime" />
    <import plugin="org.eclipse.emf.ecore" export="true"/>
    <import plugin="org.eclipse.emf.ecore.xmi" export="true"/>
  </requires>

  <runtime>
    <library name="runtime/library.xsd.jar">
      <export name="*"/>
    </library>
  </runtime>

  <extension point="org.eclipse.emf.ecore.generated_package">
    <package 
       uri = "http://www.example.eclipse.org/Library" 
       class = "org.examples.library.LibraryPackage" />
  </extension>

  <extension point="org.eclipse.emf.ecore.extension_parser">
    <parser 
       type="library" 
       class="org.examples.library.util.LibraryResourceFactoryImpl" />
  </extension>

</plugin>

