  <extension point = "org.eclipse.ui.editors">
    <editor
        id = "org.eclipse.emf.java.presentation.JavaEditorID"
        name = "Java Model Editor"
        icon = "icons/full/obj16/JavaModelFile.gif"
        extensions = "java"
        class = "org.eclipse.emf.java.presentation.JavaEditor" 
        contributorClass="org.eclipse.emf.java.presentation.JavaActionBarContributor" >
    </editor>
  </extension>
</plugin>
