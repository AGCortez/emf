<plugin
    name = "%pluginName"
    id = "org.eclipse.emf.java.editor"
    version = "2.0.1"
    provider-name = "%providerName"
    class = "org.eclipse.emf.java.presentation.JavaEditorPlugin$Implementation">

  <requires>
    <import plugin="org.eclipse.core.runtime"/>
    <import plugin="org.eclipse.core.resources"/>
    <import plugin="org.eclipse.ui.ide"/>
    <import plugin="org.eclipse.emf.java.edit" export="true"/>
    <import plugin="org.eclipse.emf.edit.ui" export="true"/>
    <import plugin="org.eclipse.emf.ecore.xmi" export="true"/>
  </requires>

  <runtime>
    <library name="runtime/java.editor.jar">
      <export name="*"/>
      <packages prefixes="org.eclipse.emf.java.presentation"/>
    </library>
  </runtime>

