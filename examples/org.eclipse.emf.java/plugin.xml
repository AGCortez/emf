<plugin
    name = "%pluginName"
    id = "org.eclipse.emf.java"
    version = "2.0.0"
    provider-name = "%providerName" 
    class="org.eclipse.emf.java.JavaPlugin$Implementation"> 

  <requires>
  	<import plugin="org.eclipse.core.runtime"/>
    <import plugin="org.eclipse.emf.ecore" export="true" />
    <import plugin="org.eclipse.jdt.core" export="true" />
  </requires>

  <runtime>
    <library name="runtime/java.jar">
      <export name="*"/>
      <packages prefixes="org.eclipse.emf.java"/>
    </library>
  </runtime>

  <extension point = "org.eclipse.emf.ecore.extension_parser">
    <parser type="java" class="org.eclipse.emf.java.util.JavaResourceFactoryImpl"/>
  </extension>

  <extension point = "org.eclipse.emf.ecore.extension_parser">
    <parser type="packages" class="org.eclipse.emf.java.util.JavaPackageResourceFactoryImpl"/>
  </extension>

</plugin>
