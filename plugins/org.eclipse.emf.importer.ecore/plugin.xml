<plugin
	name = "%pluginName"
    id = "org.eclipse.emf.importer.ecore"
    version = "2.1.0" 
    provider-name = "%providerName"
    class = "org.eclipse.emf.importer.ecore.EcoreImporterPlugin$Implementation">
    
	<requires>
	    <import plugin="org.eclipse.core.runtime"/>
	    <import plugin="org.eclipse.core.resources"/>
   	    <import plugin="org.eclipse.emf.importer"/>
	    <import plugin="org.eclipse.emf.codegen.ecore.ui"/>
	</requires>

	<runtime>
		<library name="runtime/importer.ecore.jar">
			<export name="*"/>
		</library>
	</runtime>

	<extension point="org.eclipse.emf.importer.modelImporterDescriptors">
		<modelImporterDescriptor
			id="org.eclipse.emf.importer.ecore"
			name="%_UI_EcoreImporter_label"
			icon="icons/EcoreModelFile.gif"
			extensions="ecore,emof"
			wizard="org.eclipse.emf.importer.ecore.ui.EcoreImporterWizard"/>
	</extension>
</plugin>



