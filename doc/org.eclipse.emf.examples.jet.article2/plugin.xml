<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin
   id="org.eclipse.emf.examples.jet.article2"
   name="%pluginName"
   version="2.3.0"
   provider-name="%providerName"
   class="org.eclipse.emf.examples.jet.article2.TypesafeEnumPlugin">

   <runtime>
      <library name="typesafe_enum.jar">
         <export name="*"/>
      </library>
   </runtime>
   
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.launching"/>
      <import plugin="org.eclipse.emf.codegen" export="true"/>
   </requires>


   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            name="%TypesafeEnumWizard.name"
            icon="icons/newenum_wiz.gif"
            category="org.eclipse.jdt.ui.java"
            id="org.eclipse.emf.examples.jet.article2.ui.NewTypesafeEnumCreationWizard">
         <description>
            %TypesafeEnumWizard.description
         </description>
         <class class="org.eclipse.emf.examples.jet.article2.ui.NewTypesafeEnumCreationWizard">
	         <parameter name="javatype" value="true"/>
	     </class>
      </wizard>
   </extension>
   
<!-- 
  Define an extension point for activating the EmitAction
  whenever a file with the .*jet extension is selected.
  -->
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*jet"
            id="emitTemplateContribution">
         <action
               label="Emit Selected Template(s)"
               class="org.eclipse.emf.examples.jet.article2.actionexample.EmitAction"
               enablesFor="*"
               id="emitTemplate">
         </action>
      </objectContribution>
   </extension>

</plugin>
